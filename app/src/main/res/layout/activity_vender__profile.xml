<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Venderlogin.Activity.Vender_Profile_Activity">



    <LinearLayout
        android:id="@+id/main_title_la"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/vender_img_backs"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/vender_img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_arrow_back"
                tools:ignore="contentDescription"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@mipmap/allforcar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="left">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:text="User Profile"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/_17sdp" />

            </LinearLayout>






        </LinearLayout>



    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/hidelie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:id="@+id/bacground"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/main_title_layout"
                    android:layout_height="190dp"
                   >

                    <ImageView
                        android:id="@+id/img_banner_profile"
                        android:layout_width="@dimen/_320sdp"
                        android:layout_height="@dimen/_190sdp"
                        android:scaleType="fitXY"
                         />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_marginRight="15dp">

                        <ImageView
                            android:id="@+id/venderEdituser_image"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:src="@drawable/ic_profile"/>

                        <TextView
                            android:id="@+id/txt_venrdrname_main"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Abhishek"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/white_color"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"/>


                    </LinearLayout>
                </FrameLayout>


            </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="User Name"
                android:editable="false"

                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremailsf"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagef"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/users" />




                <EditText
                    android:id="@+id/vender_dittxt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagef"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    android:hint="Email"
                    />



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Company Name"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremailsdds"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImages"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/usricons" />




                <EditText
                    android:id="@+id/vender_compnyname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImages"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    android:hint="Email"
                    />



            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Email Id"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremailsd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImageds"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/email" />




                <EditText
                    android:id="@+id/vender_edittxt_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImageds"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    android:hint="Email"
                    />



            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Phone Number"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremails"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImage"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_local_phone" />




                <EditText
                    android:id="@+id/vender_edittxt_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImage"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    android:hint="Email"
                    />



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Date of Subscription"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_below="@+id/sign_up_last_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edittextborder">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/passwords"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_date"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.5"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <EditText
                            android:id="@+id/edittxt_dateofsub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/passwordImage"
                            android:layout_centerVertical="true"
                            android:textSize="16dp"
                            android:padding="10sp"
                            android:focusable="false"
                            android:textColorHint="@color/black_color"
                            android:textColor="@color/black_color"
                            android:background="@null"
                            />

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>



            <TextView
                android:id="@+id/vender_txt_editmitstud"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:padding="5dp"
                android:background="@drawable/button_background"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
