<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/latest_news_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardviewbackgound"
            android:weightSum="4"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/offer_image"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>



            <TextView
                android:id="@+id/text_offer_name"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:text="B'day cake"
                android:textSize="15dp"
                android:textColor="@color/black_color"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/text_points"
                android:layout_width="0dp"
                android:layout_weight=".8"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:textColor="@color/black_color"
                android:padding="5dp"
                android:gravity="center"
                />
            <android.support.v7.widget.CardView
                android:id="@+id/latest_news_card_l"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_1sdp"
                app:cardCornerRadius="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/redeem_activiate"
                    android:layout_width="match_parent"
                    android:background="@drawable/cardviewbackgound"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/text_redeem"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Use Bonus"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/white_color"
                        android:padding="4dp"
                        android:gravity="center" />

                </LinearLayout>



            </android.support.v7.widget.CardView>


        </LinearLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>