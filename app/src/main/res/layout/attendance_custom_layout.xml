<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="50px"
    android:minHeight="50px"
  >


    <RelativeLayout
        android:id="@+id/radio_g"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textColor="@color/white_color"
            android:text="Payment Methods"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"/>



    </RelativeLayout>


    <RadioGroup
        android:id="@+id/radio_gr_lan_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_g"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rb_onlinepayment"
            android:layout_width="match_parent"
            android:textSize="@dimen/_18sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="Online Transfer"/>

        <RadioButton
            android:id="@+id/rb_creditdebit"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black_color"
            android:text="Credit/Debit Card"/>

        <RadioButton
            android:id="@+id/rb_Paypal"
            android:layout_width="match_parent"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="Paypal"/>
        <RadioButton
            android:id="@+id/rb_cash"
            android:layout_width="match_parent"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:text="Cash"/>


    </RadioGroup>

    <TextView
        android:id="@+id/txt_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: No Bonus, No Discount for Cash Payment."
        android:layout_below="@+id/radio_gr_lan_login"
        android:padding="1dp"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/red"/>


    <RelativeLayout
        android:layout_below="@+id/txt_Note"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/btn_background">

        <TextView
            android:id="@+id/txt_take_attendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DONE"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white_color"/>

    </RelativeLayout>


</RelativeLayout>
