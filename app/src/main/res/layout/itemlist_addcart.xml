<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/paid_or_not"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardviewbackgound"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_list_addtocart"
                            android:layout_width="90dp"
                            android:layout_height="80dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.6"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="@dimen/_142sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txt_productcompnaynm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:singleLine="true"
                                    android:maxLength="27"
                                    android:text="Abhishek Singh"
                                    android:textColor="@color/black_color"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />




                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Quantity:"
                                        android:textColor="@color/black_color"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txt_quantitiy"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="1"
                                        android:textColor="@color/black_color"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txt_qtunit"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="KG"
                                        android:textColor="@color/black_color"
                                        android:textSize="15sp" />


                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_1sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Price :"
                                        android:textColor="@color/black_color"
                                        android:textSize="15sp" />

                                    <TextView
                                        android:id="@+id/txt_productprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="1dp"
                                        android:text="1145"
                                        android:textStyle="bold"
                                        android:textColor="@color/black_color"
                                        android:textSize="15sp" />


                                </LinearLayout>


                            <LinearLayout
                                android:id="@+id/addcart_incredcrise"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/addcart_minaus"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/btn_adcard"
                                    android:src="@drawable/ic_remove" />

                                <ImageView
                                    android:id="@+id/addcard_plus"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="15dp"
                                    android:background="@drawable/btn_adcard"
                                    android:src="@drawable/ic_add" />


                            </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>









                    </LinearLayout>





                </LinearLayout>








            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/btn_buynow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"

                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/btn_removecart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Remove Item"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/white_color"
                    android:gravity="center"
                    android:background="@drawable/btn_adcard"/>

            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>