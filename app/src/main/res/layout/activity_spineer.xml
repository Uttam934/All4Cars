<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Venderlogin.Activity.AddProduct_Activity">



    <LinearLayout
        android:id="@+id/main_title_la"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/Addproudct_backbtn"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnsetting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_arrow_back"
                tools:ignore="contentDescription"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@mipmap/allforcar"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="left">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_17sdp"
                    android:layout_centerInParent="true"
                    android:text="Add Product"
                    android:textColor="@color/white_color"
                    tools:ignore="RelativeOverlap" />


            </LinearLayout>






        </LinearLayout>



    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_title_la"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/hidelie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Product Price"
                android:editable="false"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagedd"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/category" />


                <Spinner
                    android:id="@+id/spinner_categroylistd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black_color"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:padding="5dp"
                    android:background="@drawable/doropdownlist"/>


                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/spinner_categroylist"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/doropdownlist"
                    android:layout_toRightOf="@+id/passwordImagedd">

                </com.toptoche.searchablespinnerlibrary.SearchableSpinner>




            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Unit"
                android:editable="false"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImag"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/category" />





                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImag"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:inputType="text"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    android:hint="Unit"
                    />



            </RelativeLayout>


            <TextView
                android:id="@+id/submitstud"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Add Product"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:padding="5dp"
                android:background="@drawable/button_background"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>