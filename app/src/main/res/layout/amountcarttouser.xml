<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="50px"
    android:minHeight="50px"
    >


    <RelativeLayout
        android:id="@+id/radio_g"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textColor="@color/white_color"
            android:text="Calculate"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"/>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/txt_Note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_g"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:text="Enter Amount "
            android:editable="false"
            android:layout_marginTop="10dp"/>


        <RelativeLayout
            android:id="@+id/usremailsf"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/username"
            android:background="@drawable/edittextborder">

            <ImageView
                android:id="@+id/passwordImagef"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#028A12"
                android:layout_marginStart="10dp"
                android:tint="@color/colorAccent"
                android:background="@drawable/dollor" />




            <EditText
                android:id="@+id/enter_amt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passwordImagef"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:padding="10sp"
                android:hint="Enter Amount"
                android:inputType="number"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_color"
                android:background="@null"
                />


            <TextView
                android:id="@+id/amt_byqty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passwordImagef"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:padding="10sp"
                android:visibility="gone"
                android:hint="Enter Amount"
                android:inputType="number"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_color"
                android:background="@null"
                />






        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/username">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Quantity "
                android:editable="false"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/quantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Quantity "
                android:textStyle="bold"
                android:layout_marginLeft="65dp"
                android:editable="false"
                android:layout_marginTop="15dp"/>




        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/usremailsfdd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_below="@+id/username"
            android:background="@drawable/edittextborder">

            <ImageView
                android:id="@+id/passwordImagefss"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#028A12"
                android:layout_marginStart="10dp"
                android:tint="@color/colorAccent"
                android:background="@drawable/quantiy" />




            <TextView
                android:id="@+id/Qty_tot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passwordImagefss"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:padding="10sp"
                android:inputType="number"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_color"
                android:background="@null"
                />

            <EditText
                android:id="@+id/Qty_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/passwordImagefss"
                android:layout_centerVertical="true"
                android:textSize="16dp"
                android:padding="10sp"
                android:visibility="gone"
                android:hint="Enter Qty"
                android:inputType="number"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_color"
                android:background="@null"
                />






        </RelativeLayout>



    </LinearLayout>




    <RelativeLayout
        android:layout_below="@+id/txt_Note"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/btn_background">

        <TextView
            android:id="@+id/txt_take"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BUY NOW"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/white_color"/>

    </RelativeLayout>


</RelativeLayout>
