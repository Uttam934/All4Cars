<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/latest_news_card_l"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardCornerRadius="5dp"
        card_view:cardElevation="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardviewbackgound"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_weight="1.9">

                <ImageView
                    android:id="@+id/barch_logo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_vertical"
                    />



            </LinearLayout>


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="6.3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/student_img_mychild"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/brach_name"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_height="wrap_content"
                        android:text="Abhishek Singh"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black_color"/>

                    <TextView
                        android:id="@+id/brach_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOU THARA DFASDFASDFSFSDFSDFSDF"
                        android:textSize="13sp"
                        android:layout_below="@+id/txt_recent_news"
                        android:textColor="@color/black_color"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="70dp"

                android:layout_weight="1.8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@drawable/button_background"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/brach_km"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20.5 Km"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white_color"/>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>