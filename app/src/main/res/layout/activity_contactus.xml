<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Venderlogin.Activity.Contactus_Activity">



    <LinearLayout
        android:id="@+id/main_title_la"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/backbtn_contactus"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnback"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_arrow_back"
                tools:ignore="contentDescription"/>

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@mipmap/allforcar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_17sdp"
                    android:layout_centerInParent="true"
                    android:text="Contact Us"
                    android:textColor="@color/white_color"
                    tools:ignore="RelativeOverlap" />


            </LinearLayout>






        </LinearLayout>



    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_title_la"
        android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/main_iamg"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_logo_en_in"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@mipmap/app_logo"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/main_iamg"
            android:layout_centerInParent="true"
            android:id="@+id/textsddd"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Admin "
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremailsf"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagef"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/users" />




                <TextView
                    android:id="@+id/txt_adminname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagef"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Phone number(WhatsApp)"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImag"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_local_phone" />




                <TextView
                    android:id="@+id/txt_adminphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImag"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:inputType="number"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Toll Free Number"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagd"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_local_phone" />




                <TextView
                    android:id="@+id/txt_tollfreenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagd"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:inputType="number"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Email"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagefr"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/email" />




                <TextView
                    android:id="@+id/txt_admineamil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagefr"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Address"
                android:editable="false"
                android:layout_marginTop="10dp"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagdd"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_home" />




                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagdd"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>














        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>