<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.UserProfile_Activity">


    <LinearLayout
        android:id="@+id/main_title_la"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/img_back_edit_pr"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_arrow_back"
                tools:ignore="contentDescription"/>

        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_marginRight="@dimen/_3sdp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@mipmap/allforcar"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:text="User Profile"
                    android:textColor="@color/white_color"
                    android:textSize="20sp" />



            </LinearLayout>






        </LinearLayout>



    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/hidelie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <FrameLayout
                    android:id="@+id/frame_register_parent"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true">


                    <RelativeLayout
                        android:id="@+id/image_background"
                        android:layout_width="120dp"
                        android:layout_height="130dp">

                        <com.github.siyamed.shapeimageview.CircularImageView
                            android:id="@+id/Edituser_image"
                            android:layout_width="130dp"
                            android:src="@drawable/users"
                            android:layout_height="110dp"
                            android:drawableTint="#028A12"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            app:siBorderColor="@color/colorAccent"
                            app:siBorderWidth="3dp" />

                    </RelativeLayout>


                </FrameLayout>



            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="User Name"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout
                android:id="@+id/usremailsf"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagef"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/users" />




                <EditText
                    android:id="@+id/edittxt_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagef"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />



            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Email "
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagefr"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/email" />




                <EditText
                    android:id="@+id/edittxt_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagefr"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Phone Number"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImag"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_local_phone" />




                <EditText
                    android:id="@+id/edittxt_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImag"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:padding="10sp"
                    android:focusable="false"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="DOB"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/username"
                android:background="@drawable/edittextborder">

                <ImageView
                    android:id="@+id/passwordImagD"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableTint="#028A12"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorAccent"
                    android:background="@drawable/ic_date" />




                <EditText
                    android:id="@+id/edittxt_dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/passwordImagD"
                    android:layout_centerVertical="true"
                    android:textSize="16dp"
                    android:focusable="false"
                    android:padding="10sp"
                    android:textColorHint="@color/black_color"
                    android:textColor="@color/black_color"
                    android:background="@null"
                    />


            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_color"
                android:textSize="15sp"
                android:text="Date of Subscription"
                android:editable="false"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_below="@+id/sign_up_last_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edittextborder">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/passwords"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_date"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1.5"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">



                        <EditText
                            android:id="@+id/edittxt_dateofsubrionn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/passwordImage"
                            android:layout_centerVertical="true"
                            android:textSize="16dp"
                            android:padding="10sp"
                            android:focusable="false"
                            android:textColorHint="@color/black_color"
                            android:textColor="@color/black_color"
                            android:background="@null"
                            />

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>










            <TextView
                android:id="@+id/txt_editmitstud"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Edit Profile"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white_color"
                android:padding="5dp"
                android:background="@drawable/button_background"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
